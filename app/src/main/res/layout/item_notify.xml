<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:backgroundTint="#E9E9ED"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:fitsSystemWindows="true"
    android:id="@+id/notify_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:layout_weight="0"
            android:backgroundTint="#194D78"
            android:src="@drawable/service_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminder_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Oil change with filter" />

            <TextView
                android:id="@+id/NameCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Car Name" />

            <TextView
                android:id="@+id/date_to_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="10 Jan 2023" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp">


            <ProgressBar
                android:id="@+id/progress_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal"
                android:rotation="270" />


            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
